{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@ah/*": ["./src/*"],
      "@ah/atoms/*": ["./src/app/components/atoms/*"],
      "@ah/molecules/*": ["./src/app/components/molecules/*"],
      "@ah/organisms/*": ["./src/app/components/organisms/*"],
      "@ah/templates/*": ["./src/app/components/templates/*"],
      "@ah/components/utils*": ["./src/app/components/utils/*"],
      "@ah/styles*": ["./src/styles*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
